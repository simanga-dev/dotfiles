#{{{
set selection-clipboard clipboard
map <C-i> zoom in
map <C-o> zoom out
map <C-d> scroll full-down
map <C-u> scroll full-up
#}}}


# {{{ COLORS
set default-bg                  "#191919"
set default-fg                  "#7e7e7e"

set statusbar-fg                "#cccccc"
set statusbar-bg                "#191919"
set statusbar-basename          "true"

set inputbar-bg                 "#191919"
set inputbar-fg                 "#cccccc"

set notification-bg             "#191919"
set notification-fg             "#f9f5f7"

set notification-error-bg       "#191919"
set notification-error-fg       "#cc241d"

set notification-warning-bg     "#191919"
set notification-warning-fg     "#cc241d"

set highlight-color             "#fabd2f"
set highlight-active-color      "#458588"

set completion-bg               "#191919"
set completion-fg               "#458588"

set completion-highlight-fg     "#a89984"
set completion-highlight-bg     "#191919"

set recolor-lightcolor          "#191919"
set recolor-darkcolor           "#f9f5f7"

# set recolor                     "true"
set recolor-keephue             "true"
# }}}


# {{{ Things I copied over the internet
# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

# stop at page boundaries
set scroll-page-aware true
set scroll-full-overlap 0.01

# Make scrolling smooth and a bit faster
set smooth-scroll true
set scroll-step 90

set toggle_inputbar false
# set toggle_statusbar "false"

set guioptions ""

# zoom settings
set zoom-min 10

set font "JetBrainsMono 14"
# }}}
